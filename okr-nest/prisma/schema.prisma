generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Objectives {
    id String @id @default(uuid())
    objective String
    keyResults KeyResults[]
}

model KeyResults {
  id String @id @default(uuid())
  objectiveId String
  title String
  initialValue Int
  currentValue Int
  targetValue Int
  metric String
  objective Objectives @relation(fields: [objectiveId], references: [id])
}